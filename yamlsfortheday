apiVersion: v1
kind: Pod
metadata:
  name: secret-envars-test-pod
  namespace: <<namespace>>
spec:
  containers:
  - name: envars-test-container
    image: nginx
    env:
    - name: SECRET_USERNAME
      valueFrom:
        secretKeyRef:
          name: <<nameofsecret>>
          key: username
    - name: SECRET_PASSWORD
      valueFrom:
        secretKeyRef:
          name: <<nameofsecret>>
          key: password

apiVersion: v1
kind: Pod
metadata:
  name: mypod
  namespace: <<namespacename>>
spec:
  containers:
  - name: mypod
    image: nginx
    volumeMounts:
    - name: config
      mountPath: "/etc/vols"
      readOnly: true
  volumes:
  - name: config
    secret:
      secretName: <<nameofsecret>>


kind: ConfigMap 
apiVersion: v1 
metadata:
  name: example-configmap 
data:
  # Configuration values can be set as key-value properties
  database: mongodb
  database_uri: mongodb://localhost:27017
  
  # Or set as complete file contents (even JSON!)
  keys: | 
    image.public.key=771 
    rsa.public.key=42
